@model IEnumerable<FinalProjectUni.Models.AccountUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Client Accounts</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @*@Html.DisplayNameFor(model => model.MyUser)*@
                    Client Id
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.MyUser.FirstName)*@
                    First Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Account)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.MyUser.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MyUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    